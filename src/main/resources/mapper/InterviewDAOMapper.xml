<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.oscar.dao.InterviewDAO">
    <update id="batchUpdateClick">
        update db_oscar_practice.interview_test
        set click = click + 1
        where id in
        <foreach collection="checkIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>


    <select id="list" resultType="com.oscar.web.controller.out.ListOutModel">
        select *
        from db_oscar_practice.interview_test
        <where>
            i_status = 0
            and id in
            <foreach collection="inModel.ids" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
        order by click asc, id desc
    </select>
    <select id="selectId" resultType="java.lang.Integer">
        select id
        from db_oscar_practice.interview_test
        <where>
            <if test="searchKey != null and searchKey != ''">
                title like "%"#{searchKey}"%"
            </if>
        </where>
    </select>
</mapper>